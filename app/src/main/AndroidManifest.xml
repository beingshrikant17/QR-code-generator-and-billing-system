<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.qrcodegeneratorandbillingsystem">

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRCodeGeneratorAndBillingSystem">
        <activity
            android:name="com.example.qrcodegeneratorproductview.Splash_scr"
            android:exported="false" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.QR_Generator"
            android:exported="false" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.PrintPic"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.PrintBluetooth"
            android:exported="true" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.Databasehelper"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.Database"
            android:exported="false" />

        <activity
            android:name="com.example.qrcodegeneratorproductview.QR_scanner"
            android:exported="false" />
        <activity
            android:name="com.example.qrcodegeneratorproductview.MainActivity"
            android:exported="false"
            />
    </application>

</manifest>